package com.brilliantblue.panasonic.IFEdemo.common.screen{		import caurina.transitions.*;	import flash.display.*;	import flash.text.*;	import flash.events.*;	import flash.geom.*;				public class OverlayScreen extends flash.display.MovieClip	{		public var screenTitle:String;		public var screenFormat:TextFormat;		public var titleField;						public function OverlayScreen () 		{			this.x = 140;			this.y = 52;			titleField = this.title.label;			//titleField.autoSize = TextFieldAutoSize.LEFT;			titleField.width = 700;			titleField.embedFonts = true;										}				public function setScreenTitle(screenTitle)		{			screenFormat = new TextFormat();			screenFormat.kerning = true;			screenFormat.font = "Reflex Bold";			screenFormat.color = 0xFFFFFF;			screenFormat.size = 40;			screenFormat.align = "left";			titleField.text = screenTitle.toUpperCase();						if(titleField.length > 30){			titleField.replaceText(31, 1000, "...")			}			titleField.setTextFormat(screenFormat);		}					}		}