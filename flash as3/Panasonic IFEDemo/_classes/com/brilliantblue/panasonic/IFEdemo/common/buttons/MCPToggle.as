package com.brilliantblue.panasonic.IFEdemo.common.buttons{		import caurina.transitions.*;	import flash.display.*;	import flash.events.*;	import flash.geom.*;	import flash.utils.*;				public class MCPToggle extends flash.display.MovieClip	{		public var onMouseClickEvent;				public var Arrow;		public var Tab;		public var Whole;		public var doubleCheck;		public var TabOpen;		private var clickEvent;						public function MCPToggle () 		{						Arrow = this.arrow_mc;			Tab = this;			Whole = this.parent;			Arrow.alpha = .6;			TabOpen = true;			this.buttonMode = true;			this.mouseChildren = false;									this.addEventListener (MouseEvent.MOUSE_DOWN, onMouseDownEvent,false,0,true);			this.addEventListener (MouseEvent.MOUSE_UP, onMouseUpEvent,false,0,true);		addEventListener(Event.REMOVED_FROM_STAGE, onRemoved,false,0,true);		}				private function onRemoved(e:Event){						this.removeEventListener (MouseEvent.MOUSE_DOWN, onMouseDownEvent);			this.removeEventListener (MouseEvent.MOUSE_UP, onMouseUpEvent);			removeClickEvent();		}				public function setClickEvent(onMouseClickEvent)		{			clickEvent = onMouseClickEvent;			this.addEventListener (MouseEvent.CLICK, onMouseClickEvent,false,0,true);		}				public function removeClickEvent()		{			this.removeEventListener (MouseEvent.CLICK, clickEvent);		}						private function onMouseDownEvent(evt:MouseEvent)		{			Tweener.addTween(Arrow, {alpha:1, time:1, transition: "easeOutQuad"});		}						private function onMouseUpEvent(evt:MouseEvent)		{			doubleCheck = setInterval(Catinit, 250);			trace("Tab Open = " + (TabOpen));			if (TabOpen == true)			{				Tweener.addTween(Whole, {y:756, time:1, transition: "easeInOutBack"});				Tweener.addTween(Whole, {alpha:.4, time:2, transtion: "linear"});				//Tweener.addTween(Arrow, {rotation:180, time:.1, transition: "easeOutBack"});				Arrow.gotoAndStop("closed");				TabOpen = false;			}			else			{				Tweener.addTween(Whole, {y:644, time:1, transition: "easeInOutBack"});				Tweener.addTween(Whole, {alpha:1, time:2, transtion: "linear"});				//Tweener.addTween(Arrow, {rotation:0, time:.1, transition: "easeOutBack"});				Arrow.gotoAndStop("open");				TabOpen = true;			}		}								public function Catinit()		{			Tweener.addTween(Arrow, {alpha:.6, time:2, transition: "easeOutQuad"});			clearInterval(doubleCheck);		}			}		}