package com.brilliantblue.panasonic.IFEdemo.common.menu{		import caurina.transitions.*;	import flash.display.*;	import flash.text.*;	import flash.events.*;	import flash.geom.*;	import flash.utils.*;				public class ContentMenuItem extends flash.display.MovieClip	{		public var buttonTitle:String;				public var Glow;		public var Fill;		public var BBack;		public var BLabel;						public function ContentMenuItem () 		{						//trace(this.buttonTitle);			//testing			Glow = this.glow_bg;			Fill = this.fill_btn;			BBack = this.btn_bg;			BLabel = this.btn_label;			Glow.alpha = 0;			Fill.alpha = 1;			this.buttonWidth = 0;					}				public function setTitle(buttonTitle){			this.buttonTitle = buttonTitle;			//trace("testing");			this.btn_label.text = buttonTitle;					}								public function set buttonWidth(w)		{						if(w == 0){			//trace(btn_bg.scale9Grid);			BLabel.autoSize = TextFieldAutoSize.LEFT;			BBack.width = Math.round(BLabel.textWidth + 40);			Fill.width = Math.round(BLabel.textWidth + 40);			Glow.width = Math.round(BLabel.textWidth + 40);			//trace(btn_label.width);						}else{							BLabel.autoSize = TextFieldAutoSize.LEFT;			BBack.width = w			Fill.width = w*0.98			Glow.width = w							}								}							}		}