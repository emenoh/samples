package {    import flash.utils.Timer;    import flash.system.System;    public class SpitMem {        var t:Timer = new Timer(0);        var n:int, lastN:int;        public function SpitMem():void {            t.addEventListener("timer", spit2, false, 0, true);        }        private function spit1():void {            trace(System.totalMemory);        }        private function spit2():void {            n = System.totalMemory;            if (n != lastN)                trace(n);            lastN = n;        }    }}